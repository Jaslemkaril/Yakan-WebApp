APP_NAME="Yakan E-commerce"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://yakan-webapp-production.up.railway.app

LOG_CHANNEL=stack
LOG_LEVEL=error

# FORCE SQLite - DO NOT USE MYSQL
DB_CONNECTION=sqlite
DB_DATABASE=/app/storage/database.sqlite

# Session & Cache - Use file driver for SQLite
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=sync

# Broadcast & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public

# Mail (optional - configure if needed)
MAIL_MAILER=log

# Disable Redis
REDIS_CLIENT=predis
CACHE_PREFIX=yakan_
